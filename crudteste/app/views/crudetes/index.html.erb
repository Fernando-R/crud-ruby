<p id="notice"><%= notice %></p>

<h1>Crudetes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crudetes.each do |crudete| %>
      <tr>
        <td><%= crudete.nome %></td>
        <td><%= crudete.email %></td>
        <td><%= link_to 'Show', crudete %></td>
        <td><%= link_to 'Edit', edit_crudete_path(crudete) %></td>
        <td><%= link_to 'Destroy', crudete, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

